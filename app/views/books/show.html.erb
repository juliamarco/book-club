<section id="statistics">
  <ul>
    <li id="best-reviews">Top 3 Reviews: <% @top_reviews.each do |review| %>
      <p><%= review.title %></p>
      <p>Rating: <%= review.rating %></p>
      <p><%= review.user.name %></p>
    <% end %>
    </li>
    <li id="worst-reviews">Bottom 3 Reviews: <% @bottom_reviews.each do |review| %>
      <p><%= review.title %></p>
      <p>Rating: <%= review.rating %></p>
      <p><%= review.user.name %></p>
    <% end %>
    </li>
    <li id="average-rating">Average Rating: <%= @average_rating %></li>
  </ul>
</section>

<h2><%= @book.title %></h2>
<% @book.authors.each do |author| %>
  <h4><%= author.name %></h4>
<% end %>
<p>Pages: <%= @book.page_count %></p>
<p>Year: <%= @book.year %></p>

<h4>Reviews: <% @book.reviews.each do |review| %></h4>
  <ul>
    <li>
      <h3><%= review.title %></h3>
      <p>User: <%= review.user.name %></p>
      <p>Rating: <%= review.rating %></p>
      <p>Review: <%= review.review_text %></p>
    </li>
  </ul>
<% end %>

<h4 id="add-review"><%= link_to("Add Review", new_book_review_path(@book, @book.reviews.ids)) %><h4>
