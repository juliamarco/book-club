<section id="statistics">
  <ul>
    <li id="best-reviews">Top 3 Reviews: <% @top_reviews.each do |review| %>
      <p><%= review.title %></p>
      <p>Rating: <%= review.rating %></p>
      <p><%=link_to review.user.name, user_path(review.user) %></p>
    <% end %>
    </li>
    <li id="worst-reviews">Bottom 3 Reviews: <% @bottom_reviews.each do |review| %>
      <p><%= review.title %></p>
      <p>Rating: <%= review.rating %></p>
      <p><%= link_to review.user.name, user_path(review.user) %></p>
    <% end %>
    </li>
    <li id="average-rating">Average Rating: <%= @average_rating %></li>
  </ul>
</section>

<h2><%= link_to @book.title, book_path(@book) %></h2>
<% @book.authors.each do |author| %>
  <h4><%= link_to author.name, author_path(author) %></h4>
<% end %>
<p>Pages: <%= @book.page_count %></p>
<p>Year: <%= @book.year %></p>

<section id="reviews-<%= @book.id %>">
  <h4>Reviews: <% @book.reviews.each do |review| %></h4>
    <ul>
      <li>
        <h3><%= review.title %></h3>
        <p>User: <%= link_to("#{review.user.name}", user_path(review.user)) %></p>
        <p>Rating: <%= review.rating %></p>
        <p>Review: <%= review.review_text %></p>
      </li>
    </ul>
  <% end %>
</section>

<h4 id="add-review"><%= link_to("Add Review", new_book_review_path(@book, @book.reviews.ids)) %><h4>
<%= button_to "Delete Book", book_path(@book), method: :delete %>
