<section class="book-sort-bar">
  <ul>
    <li><%= link_to 'Sort by Page Count (Ascending)', books_path({sort: 'page_count', order: 'asc'}) %></li>
    <li><%= link_to 'Sort by Page Count (Descending)', books_path({sort: 'page_count', order: 'desc'}) %></li>
    <li><%= link_to 'Sort by Year (Ascending)', books_path({sort: 'year', order: 'asc'}) %></li>
    <li><%= link_to 'Sort by Year (Descending)', books_path({sort: 'year', order: 'desc'}) %></li>
  </ul>
</section>

<% @books.each do |book| %>
  <section class="books-index" id="book-<%= book.id %>">
    <a href="<%= book_path(book) %>" ><h3><%= book.title %></h3></a>
      <% book.authors.each do |author| %>
        <h5><%= author.name %></h5>
      <% end %>
      <p>Pages: <%= book.page_count %></p>
      <p>Year: <%= book.year %></p>
  </section>
<% end %>
