<% if @review.errors %>
<ul id="errors">
  <% @review.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>
<section id="new-form-wrapper">
  <%= form_for [@book, @review] do |f|%>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :user %>
    <%= f.text_field :user %>

    <%= f.label :rating %>
    <%= f.number_field :rating %><br/>

    <%= f.label :review_text %>
    <%= f.text_field :review_text %>

    <%= f.submit "Add Review", id: "new-review-button"%>
  <% end %>
</section>
