<% if @book.errors %>
<ul id="errors">
  <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<%= form_for [@book, @review] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :user %>
  <%= f.text_field :user %>

  <%= f.label :rating %></p>
  <%= f.number_field :rating %>

  <%= f.label :review_text %>
  <%= f.text_field :review_text %>

  <%= f.submit "Add Review"%>
<% end %>
